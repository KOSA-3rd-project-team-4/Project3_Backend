<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="v0.project.mysite.KBC.repository.IResumeRepository">

    <resultMap id="MemberPRResultmap" type="v0.project.mysite.work.HJH.model.MembersPR">
        <id property="pr_id" column="pr_id"/>
        <result property="member_id" column="member_id"/>
        <result property="title" column="title"/>
        <result property="start_time" column="start_time"/>
        <result property="end_time" column="end_time"/>
        <result property="contents" column="contents"/>
        <result property="display" column="display"/>
        <association property="member" javaType="Members">
            <id property="member_id" column="member_id" />
            <result property="nick_name" column="nick_name" />
            <result property="email" column="email" />
            <result property="image_id" column="image_id" />
        </association>
    </resultMap>

    <select id="selectById" resultMap="MemberPRResultmap">
        SELECT * FROM Members_PR WHERE pr_id = #{pr_id}
    </select>

    <select id="selectAll" resultMap="MemberPRResultmap">
        SELECT * FROM Members_PR
    </select>

    <select id="selectAllMembersPRWithMembers" resultMap="MembersPRResultMap">
        SELECT
        pr.*,
        m.nick_name,
        m.email,
        m.image_id
        FROM
        MembersPR pr
        JOIN
        Members m ON pr.member_id = m.member_id;
    </select>
