<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="v0.project.mysite.work.HJH.mapper.MembersPRMapper">

    <resultMap id="NewMemberPRResultmap" type="v0.project.mysite.work.HJH.model.PR.NewMembersPR">
        <id property="pr_id" column="pr_id"/>
        <result property="member_id" column="member_id"/>
        <result property="title" column="title"/>
        <result property="photo_id" column="photo_id"/>
        <result property="name" column="name"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="contact" column="contact"/>
        <result property="address" column="address"/>
        <result property="start_time" column="start_time"/>
        <result property="end_time" column="end_time"/>
        <result property="contents" column="contents"/>
        <result property="display" column="display"/>
    </resultMap>

    <select id="selectById" resultMap="NewMemberPRResultmap">
        SELECT * FROM Members_PR WHERE pr_id = #{pr_id}
    </select>

    <select id="selectAll" resultMap="NewMemberPRResultmap">
        SELECT * FROM Members_PR
    </select>

    <insert id="insert" parameterType="v0.project.mysite.work.HJH.model.PR.NewMembersPR" useGeneratedKeys="true" keyProperty="pr_id">
        INSERT INTO Members_PR (member_id, title, photo_id, name, gender, birthday, contact, address, start_time, end_time, contents, display)
        VALUES (#{member_id}, #{title}, #{photo_id}, #{name}, #{gender}, #{birthday}, #{contact}, #{address}, #{start_time}, #{end_time}, #{contents}, #{display})
    </insert>

    <update id="update" parameterType="v0.project.mysite.work.HJH.model.PR.NewMembersPR">
        UPDATE Members_PR
        SET member_id = #{member_id}, title = #{title}, photo_id = #{photo_id}, name = #{name}, gender = #{gender},
            birthday = #{birthday}, contact = #{contact}, address = #{address},
            start_time = #{start_time}, end_time = #{end_time}, contents = #{contents}, display = #{display}
        WHERE pr_id = #{pr_id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM Members_PR WHERE pr_id = #{pr_id}
    </delete>

    <!-- TODO 0828-->
    <select id="selectUser" resultMap="NewMemberPRResultmap">
        SELECT * FROM Members_PR WHERE member_id = #{member_id}
    </select>
</mapper>
