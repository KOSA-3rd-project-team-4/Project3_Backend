<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="v0.project.mysite.work.HJH.mapper.PReducationMapper">

    <resultMap id="PReducationResultmap" type="v0.project.mysite.work.HJH.model.PR.Education">
        <id property="education_id" column="education_id"/>
        <result property="pr_id" column="pr_id"/>
        <result property="school" column="school"/>
        <result property="period" column="period"/>
        <result property="major" column="major"/>
    </resultMap>

    <select id="findById" resultMap="PReducationResultmap">
        SELECT * FROM pr_education WHERE pr_id = #{pr_id}
    </select>

    <select id="selectAll" resultMap="PReducationResultmap">
        SELECT * FROM pr_education
    </select>

    <insert id="insert" parameterType="v0.project.mysite.work.HJH.model.PR.Education">
        INSERT INTO pr_education (pr_id, school, period, major)
        VALUES (#{pr_id}, #{school}, #{period}, #{major})
    </insert>

    <update id="update" parameterType="v0.project.mysite.work.HJH.model.PR.Education">
        UPDATE pr_education
        SET pr_id = #{pr_id}, school = #{school}, period = #{period}, major = #{major}
        WHERE education_id = #{education_id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM pr_education WHERE pr_id = #{pr_id}
    </delete>

    <!-- TODO 0828-->
</mapper>