<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="v0.project.mysite.work.HJH.mapper.PRtagsMapper">

    <resultMap id="PRtagResultmap" type="v0.project.mysite.work.HJH.model.PR.Tags">
        <id property="day_id" column="day_id"/>
        <result property="pr_id" column="pr_id"/>
        <result property="tag" column="tag"/>
    </resultMap>

    <select id="findById" resultMap="PRtagResultmap">
        SELECT * FROM pr_tag WHERE pr_id = #{pr_id}
    </select>

    <select id="selectAll" resultMap="PRtagResultmap">
        SELECT * FROM pr_tag
    </select>

    <insert id="insert" parameterType="v0.project.mysite.work.HJH.model.PR.Tags">
        INSERT INTO pr_tag (pr_id, tag)
        VALUES (#{pr_id}, #{tag})
    </insert>

    <update id="update" parameterType="v0.project.mysite.work.HJH.model.PR.Tags">
        UPDATE pr_tag
        SET pr_id = #{pr_id}, tag = #{tag}
        WHERE day_id = #{day_id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM pr_tag WHERE pr_id = #{pr_id}
    </delete>

    <!-- TODO 0828-->
</mapper>