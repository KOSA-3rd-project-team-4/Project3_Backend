<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="v0.project.mysite.work.HJH.mapper.PRexperienceMapper">

    <resultMap id="PRexperienceResultmap" type="v0.project.mysite.work.HJH.model.PR.Experience">
        <id property="experience_id" column="experience_id"/>
        <result property="pr_id" column="pr_id"/>
        <result property="company" column="company"/>
        <result property="role" column="role"/>
        <result property="period" column="period"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="findById" resultMap="PRexperienceResultmap">
        SELECT * FROM pr_experience WHERE pr_id = #{pr_id}
    </select>

    <select id="selectAll" resultMap="PRexperienceResultmap">
        SELECT * FROM pr_experience
    </select>

    <insert id="insert" parameterType="v0.project.mysite.work.HJH.model.PR.Experience">
        INSERT INTO pr_experience (pr_id, company, role, period, description)
        VALUES (#{pr_id}, #{company}, #{role}, #{period}, #{description})
    </insert>

    <update id="update" parameterType="v0.project.mysite.work.HJH.model.PR.Experience">
        UPDATE pr_experience
        SET pr_id = #{pr_id}, company = #{company}, role = #{role}, period = #{period}, description = #{description}
        WHERE experience_id = #{experience_id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM pr_experience WHERE pr_id = #{pr_id}
    </delete>

    <!-- TODO 0828-->
</mapper>