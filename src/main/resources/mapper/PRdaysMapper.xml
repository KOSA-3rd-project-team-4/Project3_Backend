<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="v0.project.mysite.work.HJH.mapper.PRdaysMapper">

    <resultMap id="PRdayResultmap" type="v0.project.mysite.work.HJH.model.PR.Available_days">
        <id property="day_id" column="day_id"/>
        <result property="pr_id" column="pr_id"/>
        <result property="day" column="day"/>
    </resultMap>

    <select id="findById" resultMap="PRdayResultmap">
        SELECT * FROM pr_available_days WHERE pr_id = #{pr_id}
    </select>

    <select id="selectAll" resultMap="PRdayResultmap">
        SELECT * FROM pr_available_days
    </select>

    <insert id="insert" parameterType="v0.project.mysite.work.HJH.model.PR.Available_days">
        INSERT INTO pr_available_days (pr_id, day)
        VALUES (#{pr_id}, #{day})
    </insert>

    <update id="update" parameterType="v0.project.mysite.work.HJH.model.PR.Available_days">
        UPDATE pr_available_days
        SET pr_id = #{pr_id}, day = #{day}
        WHERE day_id = #{day_id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM pr_available_days WHERE pr_id = #{pr_id}
    </delete>

    <!-- TODO 0828-->
</mapper>